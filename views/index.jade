extends layout
block content
	div(class="remove-float center-block text-center big-top-space")
		if (user)
			.index-card.effect7
				h2 Hola #{user.username}
				hr
				a(href='/truco')
					button.btn.btn-primary(type="button") Lobby
				| 
				a(href="/logout")
					button.btn.btn-danger(type="button") Cerrar sesión
				hr
				div(class="login-help remove-float center-block text-center" style="padding-bottom: 0px;")
					table(style= "width :100%;")
						tr
							td
								input(type="image" src="/images/github.png" width='15', height='15')
							td
								a(href="https://github.com/migueljimenop") Miguel Jimeno
